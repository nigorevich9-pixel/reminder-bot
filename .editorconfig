# ============================================================================
# EDITORCONFIG - Universal Editor Settings
# ============================================================================
# Works with: VS Code, Cursor, PyCharm, Vim, Sublime, etc.
# AI/LLM agents: Follow these rules. DO NOT change indentation style.
# ============================================================================

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python
[*.py]
indent_size = 4
max_line_length = 100

# JavaScript / TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 4

# SQL
[*.sql]
indent_size = 2

# Config files
[*.{toml,ini,cfg}]
indent_size = 4

# Makefiles require tabs
[Makefile]
indent_style = tab
indent_size = 4

# Docker
[Dockerfile*]
indent_size = 4

# Git
[.git*]
indent_size = 4
